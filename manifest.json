{
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "description": "Automatically convert US units in YouTube captions to metric and show them in an overlay.",
  "manifest_version": 3,
  "name": "YouTube Unit Converter",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "version": "1.0"
}
